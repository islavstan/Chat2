<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"

            android:layout_margin="4dp"

            android:src="@drawable/b"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/user_image"
            android:layout_marginTop="10dp"
            android:id="@+id/bubble"

            android:background="@drawable/ch23"
            >

            <TextView
                android:id="@+id/txt_msg"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:padding="4dp"


                android:text="Привет)"
                />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_msg"
                android:layout_alignStart="@+id/txt_msg"
                android:text="28.09.16 18:09"
                android:textColor="@android:color/white"


                android:textSize="11dp" />

            <ImageView
                android:id="@+id/mail"
                android:layout_width="14dp"
                android:layout_height="14dp"
               android:layout_toRightOf="@+id/date"
              android:layout_marginStart="5dp"

                android:layout_below="@+id/txt_msg"
                android:tint="@android:color/white"
                android:src="@drawable/ic_mail_outline_white_24dp" />


        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>